<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-1dp"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/tu" />

    </FrameLayout>

    <TextView
        android:id="@+id/adivino"
        android:layout_width="349dp"
        android:layout_height="135dp"
        android:layout_marginTop="220dp"
        android:text="Â¿Este es tu numero?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numero"
        android:layout_width="292dp"
        android:layout_height="73dp"
        android:layout_marginTop="160dp"
        android:fontFamily="monospace"
        android:text="50"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mayor"
        android:layout_width="252dp"
        android:layout_height="95dp"
        android:layout_marginTop="250dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/mayor__1_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="@+id/frameLayout" />

    <ImageButton
        android:id="@+id/menor"
        android:layout_width="252dp"
        android:layout_height="95dp"
        android:layout_marginTop="420dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/menor__1_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toTopOf="@+id/frameLayout" />

    <ImageButton
        android:id="@+id/acierto"
        android:layout_width="252dp"
        android:layout_height="95dp"
        android:layout_marginTop="600dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/acierto__1_"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/nuevo"
        android:layout_width="381dp"
        android:layout_height="179dp"
        android:layout_marginTop="400dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/new_game__1_"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>